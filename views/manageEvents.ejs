<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Events</title>
  <link href="https://fonts.googleapis.com/css2?family=Questrial&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: "Questrial", sans-serif;
      font-weight: 400;
      font-style: normal;
      margin: 0;
      padding: 0;
      background-color: #fcfcfc;
    }
    
    /* Landscape photo */
    .header-container {
      position: relative;
      width: 100%;
      height: 300px; /* Adjust based on how tall you want the image */
    }
    
    .header-image {
      width: 100%;
      height: 100%;
      object-fit: cover; /* Ensures the image covers the area without stretching */
    }
    
    h1 {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-family: "Questrial", sans-serif;
      font-weight: 400;
      font-style: normal;
      font-size: 80px;
      text-align: center;
      color: rgb(120, 140, 130);
      margin: 0;
      z-index: 10; /* Ensures the text appears on top of the image */
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin: 0 auto;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      background-color: white;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 12px;
      text-align: center;
    }

    th {
      background-color: rgb(120, 140, 130); /* Header color */
      color: white;
      font-weight: bold;
    }

    tr:nth-child(even) {
      background-color: #f9f9f9;
    }

    button {
      font-family: "Questrial", sans-serif;
      font-weight: 400;
      font-style: normal;
      padding: 8px 15px;
      font-size: 14px;
      cursor: pointer;
      background-color: rgb(41, 77, 74);
      color: white;
      border: none;
      border-radius: 5px;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: rgb(120, 140, 130);
    }

    form {
      display: inline;
    }

    .add-event-btn {
      margin-top: 20px;
      display: block;
      width: 200px;
      margin: 20px auto;
      text-align: center;
    }

    .add-event-btn button {
      width: 100%;
    }
  </style>
</head>
<body>
<h1>Manage Events</h1>
<table>
  <thead>
    <tr>
      <th>Organization</th>
      <th>Attendance Estimate</th>
      <th>Event Type</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>Duration (hrs)</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% events.forEach(event => { %>
      <tr>
        <td><%= event.org_name %></td>
        <td><%= event.total_attendance_estimate %></td>
        <td><%= event.event_type == 'S' ? 'Sewing' : event.event_type == 'N' ? 'Non-sewing' : 'Both' %></td>
        <td><%= event.planned_date.toLocaleDateString() %></td>
        <td><%= event.start_time %></td>
        <td><%= event.planned_hour_duration %></td>
        <td><%= event.event_status == 'A' ? 'Approved' : event.event_status == 'D' ? 'Declined' : event.event_status == 'C' ? 'Completed' : 'Pending'  %></td>
        <td>
          <form action="/admin/editEvent/<%= event.event_id %>" method="GET">
            <button type="submit">Edit</button>
          </form>
          <% if (event.event_status !== 'C') { %>
            <form action="/admin/deleteEvent/<%= event.event_id %>" method="POST">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this event?');">Delete</button>
            </form>
          <% } %>
          <% if (event.event_status == 'C') { %>
            <form action="/admin/reportEvent/<%= event.event_id %>" method="GET">
              <button type="submit">Report Results</button>
            </form>
          <% } %>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
<form action="/admin/addEvent" method="GET">
  <button type="submit">Add Event</button>
</form>
</body>
</html>
